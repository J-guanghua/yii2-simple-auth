{
	"name": "rob006/yii2-simple-auth",
	"description": "Yii 2 extension that provides simple authentication based on a secret key.",
	"type": "yii2-extension",
	"keywords": ["yii2", "extension", "auth", "authentication"],
	"license": "MIT",
	"authors": [
		{
			"name": "Robert Korulczyk",
			"email": "robert@korulczyk.pl",
			"homepage": "https://rob006.net/"
		}
	],
	"support": {
		"issues": "https://github.com/rob006/yii2-simple-auth/issues",
		"source": "https://github.com/rob006/yii2-simple-auth"
	},
	"require": {
		"yiisoft/yii2": "2.0.*"
	},
	"require-dev": {
		"yiisoft/yii2-httpclient": "^2.0.0"
	},
	"autoload": {
		"psr-4": {
			"rob006\\simpleauth\\": "src/"
		}
	},
	"suggest": {
		"yiisoft/yii2-httpclient": "HTTP client supported by extension authenticator"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0-dev"
		}
	}
}
